@page "/Tecnico/Details/{TecnicoId:int}"
@inject TecnicoServices tecnicoService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Observar</PageTitle>
<div class="container">
    <div class="shadow-lg">
        @*Header*@
        <div class="card-header">
            <h3>T&eacute;nico</h3>
        </div>
        @*Body*@
        <div class="card-body">
            <h5>Detalle del técnico</h5>
            <dl class="row mt-2">
                @*TecnicoId*@
                <dt class="col-sm-3">TécnicoId:</dt>
                    <dd class="col-sm-9">@tecnico.TecnicoId</dd>
                @*Nombre*@
                <dt class="col-sm-3">Nombre:</dt>
                    <dd class="col-sm-9">@tecnico.Nombre</dd>
                @*Sueldo por hora*@
                <dt class="col-sm-3">Sueldo por hora:</dt>
                    <dd class="col-sm-9">@tecnico.SueldoHora</dd>
            </dl>
        </div>
        @*Footer*@
        <div class="card-footer">
            @*Boton volver*@
            <button type="button" class="btn btn-secondary" @onclick=Volver>Volver</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int TecnicoId { get; set; }
    public Tecnicos tecnico { get; set; } = new Tecnicos();

    protected override async Task OnInitializedAsync()
    {
        tecnico = await tecnicoService.Buscar(TecnicoId);
    }

    public void Volver()
    {
        navigationManager.NavigateTo("Tecnicos/Index");
    }
}
